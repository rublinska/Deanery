<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/student_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="4dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/student_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Богачек Єлизавета Миколаївна"
                        android:textSize="17sp"
                        app:fontFamily="@font/montserrat_bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/speciality_hint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Спеціальність"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/student_specialty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Інформатика"
                                android:textSize="12sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/endReason_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Причина завершення"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/student_endReason"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Закінчено навчання"
                                android:textSize="12sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/startUni_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Початок навчання"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/student_startUni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019-03-12"
                                android:textSize="12sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/endUni_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Завершення навчання"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/student_endUni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019-03-19"
                                android:textSize="12sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/phone_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Номер телефону"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/student_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+38 (073) 137 0347"
                                android:textSize="12sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>