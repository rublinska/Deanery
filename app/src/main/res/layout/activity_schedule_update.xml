<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.schedule.ScheduleCreateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time interval:"/>
    <Spinner
        android:id="@+id/schedule_time_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discipline:"/>
    <Spinner
        android:id="@+id/schedule_discipline_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lecturer:"/>
    <Spinner
        android:id="@+id/schedule_lecturer_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group:"/>
    <Spinner
        android:id="@+id/schedule_group_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/schedule_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="semester" />

    <EditText
        android:id="@+id/schedule_specialty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="specialty" />

    <EditText
        android:id="@+id/schedule_day_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day_of_week" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auditory:"/>
    <Spinner
        android:id="@+id/schedule_auditory_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--TODO place it at the bottom-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:background="#F44336"
            android:text="Cancel" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.04" />

        <Button
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:background="#009688"
            android:text="Update" />
    </LinearLayout>
</LinearLayout>