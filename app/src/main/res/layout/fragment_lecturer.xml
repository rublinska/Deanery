<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/lecturer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke">

            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:paddingLeft="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/lecturer_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bohachek Yelyzaveta Mykolyaevna"
                        android:textSize="17sp"
                        app:fontFamily="@font/montserrat_bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/postion_hint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Position"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/lecturer_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Professor"
                                android:textSize="14sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/department_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Department"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/lecturer_department"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biology"
                                android:textSize="14sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/phone_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone Number"
                                android:textColor="@color/mainBlue"
                                android:textSize="10sp"
                                app:fontFamily="@font/montserrat" />

                            <TextView
                                android:id="@+id/lecturer_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+38 (073) 137 0347"
                                android:textSize="14sp"
                                app:fontFamily="@font/montserrat" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>