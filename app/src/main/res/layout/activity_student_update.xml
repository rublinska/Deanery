<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:gravity="center">

    <Button
        android:id="@+id/delete"
        android:background="#FF9800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete student"/>

    <EditText
        android:id="@+id/student_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bohachek Yelyzaveta Mykolyaevna" />

    <EditText
        android:id="@+id/student_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+985 840598 2"/>

    <EditText
        android:id="@+id/student_startUni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"/>

    <EditText
        android:id="@+id/student_endUni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"/>
    <EditText
        android:id="@+id/student_endReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="end of uni reason"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/cancel"
            android:background="#F44336"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:text="Cancel"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.04"/>
        <Button
            android:id="@+id/update"
            android:background="#009688"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:text="Update"/>
    </LinearLayout>
</LinearLayout>


