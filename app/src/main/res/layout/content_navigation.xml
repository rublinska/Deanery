<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_navigation">

    <LinearLayout
        android:id="@+id/lecturers_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">
        <LinearLayout
            android:id="@+id/lecturer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/name_department_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lecturer_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bohachek Yelyzaveta Mykolyaevna" />
                <TextView
                    android:id="@+id/lecturer_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="biology" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_position_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lecturer_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professor" />
                <TextView
                    android:id="@+id/lecturer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+38 (073) 137 0347" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>